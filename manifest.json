{
    "manifest_version": 3,
    "name": "Repo Shortcuts",
    "description": "Shortcuts to git repositories",
    "version": "1.2",
    "permissions": ["storage"],
    "icons": {
        "42": "icon.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "repo-shortcuts.BramMeerten@github.com"
        }
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "options_ui": {
        "page": "options.html"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "windows": "Ctrl+Period",
                "mac": "Command+Period",
                "chromeos": "Ctrl+Period",
                "linux": "Ctrl+Period"
            }
        }
    }
}
