{
  "manifest_version": 3,
  "name": "Repo Shortcuts",
  "description": "Shortcuts to git repositories",
  "version": "1.0",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "options_ui": {
    "page": "options.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Period",
        "mac": "Command+Period",
        "chromeos": "Ctrl+Period",
        "linux": "Ctrl+Period"
      }
    }
  }
}
